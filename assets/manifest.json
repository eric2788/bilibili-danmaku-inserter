{

    "manifest_version": 2,
    "name": "bilibili danmaku inserter",
    "version": "0.1.1",
  
    "description": "bilibili danmaku inserter by ericlam",
    "author": "Eric Lam",
    "developer": {
      "name": "Eric Lam",
      "url": "https://github.com/eric2788"
    },
    "icons": {
      "64": "icons/icon.png"
    },

    "permissions": [
      "*://api.bilibili.com/*",
      "*://space.bilibili.com/*",
      "webRequest",
      "notifications",
      "tabs"
    ],

    "background":{
        "scripts": [
          "browser-polyfill.min.js",
          "background.js"
        ]
    },

    "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net https://code.jquery.com; object-src 'self'",

    "browser_action": {
      "browser_style": true,
      "default_icon": {
        "64": "icons/icon.png"
      },
      "default_title": "前往界面"
    }
  
  }