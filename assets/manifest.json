{

    "manifest_version": 2,
    "name": "bilibili danmaku inserter",
    "version": "0.1.1",
  
    "description": "bilibili danmaku inserter by ericlam",
    "author": "Eric Lam",
    "developer": {
      "name": "Eric Lam",
      "url": "https://github.com/eric2788"
    },
    "icons": {
      "48": "icons/icon.png"
    },

    "permissions": [
      "*://api.bilibili.com/*",
      "webRequest",
      "notifications",
      "tabs"
    ],

    "content_scripts": [
      {
        "matches": ["*://www.bilibili.com/video/*"],
        "js": [
          "browser-polyfill.min.js",
          "index.js"
        ]
      }
    ],

    "background":{
        "scripts": [
          "browser-polyfill.min.js",
          "background.js"
        ]
    },

    "content_security_policy": "script-src 'self' https://stackpath.bootstrapcdn.com; object-src 'self'",

    "browser_action": {
      "browser_style": true,
      "default_icon": {
        "40": "icons/icon.png"
      },
      "default_title": "前往界面"
    }
  
  }